@model Application.ViewModel.PredictionViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Registro del activo</h1>
    <p>Organiza desde el mas reciente hasta el mas antiguo</p>
</div>

<div>
    <div>
        <form asp-controller="Home" asp-action="Index" method="post">
            <div class="row">
                @for (int i = 1; i <= 20; i++)
                {
                    <div class="row mb-2">
                        <div class="col-12 col-md-7">
                            <label asp-for="Date[@i-1]" class="form-label">Fecha @i</label>
                            <input asp-for="Date[@i-1]" type="date" class="form-control" />
                            <span asp-validation-for="Date[@i-1]" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-5">
                            <label asp-for="Valor[@i-1]" class="form-label">Valor @i</label>
                            <input asp-for="Valor[@i-1]" type="number" class="form-control" />
                            <span asp-validation-for="Valor[@i-1]" class="text-danger"></span>
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-12 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mt-3">Calcular Prediccion</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(ViewBag.Resultado))
{
    <div class="col-12 col-md-8 mt-3 offset-md-2 alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.Resultado 
        <button type="button" class="btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
    </div>
}